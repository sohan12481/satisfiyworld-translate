api/translate.js
// SatisfiyWorld Stable Translation API
// Google-like | Auto Detect | Unlimited | Backend Safe

export default async function handler(req, res) {
  try {
    const text = req.query.text;
    const to = req.query.to || "en";

    if (!text) {
      return res.status(400).json({
        success: false,
        error: "Missing 'text' query parameter"
      });
    }

    const response = await fetch("https://translate.argosopentech.com/translate", {
      method: "POST",
      headers: {
        "Content-Type": "application/json"
      },
      body: JSON.stringify({
        q: text,
        source: "auto",
        target: to,
        format: "text"
      })
    });

    const data = await response.json();

    res.status(200).json({
      success: true,
      originalText: text,
      translatedText: data.translatedText,
      targetLanguage: to,
      api: "Satisfiyworld-Translate"
    });

  } catch (err) {
    res.status(500).json({
      success: false,
      error: "Translation server error",
      details: err.message
    });
  }
}
